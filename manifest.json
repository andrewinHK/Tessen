{
    "name": "Chrome Sensu",
    "version": "0.1.1",
    "description": "Sensu monitoring for chrome extension",
    "icons": {
        "48": "images/sensu48.png",
        "128": "images/sensu128.png",
        "32": "images/sensu32.png",
        "64": "images/sensu64.png",
        "19": "images/sensu19.png"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "sensu/tessen.js",
            "sensu/background.js"
        ]
    },
    "browser_action": {
      "default_icon": {
        "19": "images/sensu-unknown19.png",
        "38": "images/sensu-red38.png"
      },
      "defaut_title": "Sensu",
      "default_popup": "sensu/popup.html"
    },
    "permissions": [
        "http://*/"
    ],
    "manifest_version": 3
}
